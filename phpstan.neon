includes:
    - vendor/larastan/larastan/extension.neon

parameters:
    paths:
        - app/
        - database/

    # Level 5 provides good balance for Laravel projects
    # Level 6+ requires more detailed type annotations
    level: 5

    # Report unmatched ignored errors (useful for cleanup)
    reportUnmatchedIgnoredErrors: true

    # Ignore common Laravel magic patterns (uncomment as needed)
    # ignoreErrors:
    #     - '#PHPDoc tag @var#'

    # Exclude test files from analysis
    excludePaths:
        - ./*/*/FileToBeExcluded.php

